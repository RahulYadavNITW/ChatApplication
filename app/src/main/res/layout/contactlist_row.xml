<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleCONTACT"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:layout_marginRight="6dp"
    android:clickable="true"
    android:onClick="chatWithUser">


    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/namini"/>


    <RelativeLayout
        android:id="@+id/first_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/contactImage"
        >

        <TextView
            android:id="@+id/contactNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME : "
            android:textColor="#D9000000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/contactName"
            android:layout_toEndOf="@+id/contactNameText"
            android:layout_toRightOf="@+id/contactNameText"
            android:paddingLeft="5dp"
            android:text="ROCKY BALBOA"
            android:textColor="#D9000000"
            android:textSize="16dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_container"
        android:layout_alignLeft="@+id/first_container"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contactNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No : "
                android:textColor="#8C000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 8885563455"
                android:textColor="#8C000000"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email id : "
                android:textColor="#8C000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rockybalboa@hotmail.com"
                android:textColor="#8C000000"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>