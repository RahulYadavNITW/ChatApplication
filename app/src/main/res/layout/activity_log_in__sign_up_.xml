<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.thenewboston.myparseapplication.LogIn_SignUp_Activity"
    android:background="#BBDEFB"
    android:clickable="false">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:id="@+id/logo"/>
    <TextView
        android:text="Username"
        android:id="@+id/textUsernameString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/logo"
        android:textSize="25sp"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/textUsername"
        android:layout_below="@+id/textUsernameString"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusDown="@+id/textPassword"/>
    <TextView
        android:text="Password"
        android:id="@+id/textPasswordString"
        android:layout_below="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:imeOptions="actionDone"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/textPassword"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_below="@+id/textPasswordString"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/loginbutton"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textPassword"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:background="@color/button_material_light"
       />
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signupbutton"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/loginbutton"
        android:layout_below="@+id/textPassword"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:background="@color/button_material_light"
         />
</RelativeLayout>
